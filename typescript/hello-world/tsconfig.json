{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "built/local",
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts"
    ]
}
